<!--  Creat the code for chat box -->
<% if (locals.user){ %>
	<div id="user-chat-box">
		<ul id="chat-messages-list">
			<% for(chatMessage of chatMessages ) { %>
				<% if(chatMessage.user==locals.user.id){ %>
			<li class="self-message">
		
				<span>
					<%= chatMessage.content %></span>
					<br>
					<%= chatMessage.email%>
				
			</li><%}else{%>
			<li class="other-message">
				<span><%= chatMessage.content %></span>
				<br>
				<%= chatMessage.email%>
				

			</li>
			<% }} %>

		</ul>
		<div id="chat-message-input-container">
			<form action="/users/chatMessage" method="POST">
				<input id="chat-message-input" type="text" name="content" placeholder="Type message here">
			
				<button id="send-message">Send</button>
			</form>
		
			
			<br>
		
			
		</div>

	</div>
<% } %>
