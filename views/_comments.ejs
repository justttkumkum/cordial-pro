<li id="comment-<%= comment._id %>">
        <p>
            <% if (locals.user && locals.user.id == comment.user){ %>
            
            <small>
                <a class="delete-comment-button" href="/comments/destroy/<%= comment.id %>">X</a>
            </small>
            <% } %>
            <%= comment.content %>
            <br>
            <small>
                <%= comment.name %>
            </small>

             <!-- display the likes of the comment, if user is logged in, then show the link to toggle likes, else, just show the count -->
             <br>
             <small>
                 <% if(locals.user) { %>
                     <a class="toggle-like-button" data-likes="<%= comment.likes.length %>" href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                         <%= comment.likes.length%> Likes
                     </a>
                <% } else { %>
                         <%= comment.likes.length %> Likes
                 <% } %>
             </small>
        </p>    

</li>